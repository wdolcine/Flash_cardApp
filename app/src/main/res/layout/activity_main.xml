<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cardbackground"
        android:elevation="5dp"
        android:padding="20dp"
        android:text="Who is the 44th President of the United States ?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/flashcard_question"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-390dp"
        android:background="@color/pinK"
        android:elevation="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@color/pinK"
        android:elevation="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="George H. Bush"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/flashcard_answer2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:background="@color/pinK"
        android:elevation="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Bill Clinton"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/flashcard_answer3"
        android:layout_centerInParent="true"
        android:layout_marginTop="169dp"
        android:elevation="5dp"
        android:src="@drawable/icon_eye"

        />

</RelativeLayout>